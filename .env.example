# StratCap Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Environment
ENVIRONMENT=development
DEBUG=true
PORT=8000
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://stratcap:stratcap123@postgres:5432/stratcap
DATABASE_POOL_SIZE=5
DATABASE_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_POOL_SIZE=10

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-please-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1,api-gateway

# Rate Limiting
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW=60

# Service URLs (for development)
USER_MANAGEMENT_URL=http://user-management:8001
FUND_MANAGEMENT_URL=http://fund-management:8002
DATA_INGESTION_URL=http://data-ingestion:8003
CALCULATION_ENGINE_URL=http://calculation-engine:8004
WORKFLOW_ENGINE_URL=http://workflow-engine:8005
REPORTING_SERVICE_URL=http://reporting:8006
NOTIFICATION_SERVICE_URL=http://notification:8007

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000